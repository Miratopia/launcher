{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "miratopia-launcher",
  "version": "0.2.1",
  "identifier": "fr.miratopia.minecraft-launcher",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "bun run generate",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Miratopia Minecraft Launcher",
        "width": 1280,
        "height": 780,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDkyMjc0RTFCQzExNkZFQ0QKUldUTi9oYkJHMDRua2pHbWRBbXVHTjZTVWZkcFVsYWI0S1M3WXZFUjNTcUlodFZaV3o0MGFQMXIK",
      "endpoints": [
        "https://github.com/miratopia/launcher/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
